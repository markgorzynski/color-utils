{
  "name": "@markgorzynski/color-utils",
  "version": "0.9.9",
  "description": "The only color science library with adaptive visual perception modeling and accessibility-driven optimization.",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "src",
    "index.d.ts",
    "LICENSE",
    "README.md",
    "MIGRATION.md",
    "RANGE_STANDARDS.md",
    "TROUBLESHOOTING.md",
    "examples"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./src/index.js",
      "require": "./src/index.js"
    }
  },
  "types": "./index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests",
    "lib": "src"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"docs/**/*.md\" \"*.md\"",
    "docs": "jsdoc -c jsdoc.config.json",
    "docs:serve": "npx http-server ./docs/api -p 8080",
    "preversion": "npm run test:run",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "color",
    "colour",
    "conversion",
    "srgb",
    "xyz",
    "cielab",
    "lab",
    "lch",
    "oklab",
    "oklch",
    "aoklab",
    "adaptive oklab",
    "ciecam16",
    "cam16-ucs",
    "display-p3",
    "rec2020",
    "wcag",
    "contrast",
    "accessibility",
    "color difference",
    "ciede2000",
    "gamut mapping",
    "chromatic adaptation",
    "css color",
    "color parser",
    "utilities",
    "color science",
    "chroma control",
    "luminance",
    "hdr",
    "wide gamut",
    "color appearance",
    "perceptual uniformity"
  ],
  "author": "Mark Gorzynski",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markgorzynski/color-utils.git"
  },
  "bugs": {
    "url": "https://github.com/markgorzynski/color-utils/issues"
  },
  "homepage": "https://github.com/markgorzynski/color-utils#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/markgorzynski"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "jsdoc": "^4.0.4",
    "minami": "^1.2.3",
    "prettier": "^2.5.0",
    "taffydb": "^2.7.3",
    "typedoc": "^0.28.11",
    "vitest": "^3.2.4"
  }
}
